; Upload FPGA image and scan core in Folder LATEST 
; All files must be loceted in "C:\HOAX\LATEST\"

connect ''

mypath='C:\HOAX\LATEST\main_midi.bit'
sendln  'DFS=0!'
waitln '[OK]'
; Lösche gesamtes Flash
sendln  'DFE 2=0'
timeout=8
waitln '[$00000000]'
timeout=2
sendln  'DFX 0=0!'
waitln '[START XMODEM]'
xmodemsend mypath 1

; DataFlash war gelöscht
sendln  'DFS=0!'
waitln '[OK]'
sendln  'DFE 1=1'
waitln '000]'
sendln  'DFE 1=10'
waitln '000]'


; Core 1 = MIDI receive
mypath='C:\HOAX\LATEST\HX_midi.dat'
sendln  'DFX 1=1'
waitln '[START XMODEM]'
xmodemsend mypath 1
waitln '000]'

; Core 2 = FatarScan2
mypath='C:\HOAX\LATEST\HX_fatar.dat'
sendln  'DFX 1=2'
waitln '[START XMODEM]'
xmodemsend mypath 1
waitln '000]'

; Core 10 = EEPROM-Inhalt für FV-1
mypath='C:\HOAX\LATEST\hoax3rev.bin'
sendln  'DFX 1=10'
waitln '[START XMODEM]'
xmodemsend mypath 1
waitln '000]'
; EEPROM aus CoreBlock laden und abwarten, I2C-JUMPER SETZEN!
sendln  'SFX=10'

waitln '[OK]'
pause 2

; Default Scan Core FATAR
sendln 'wen=1'
sendln '519=2'

pause 6

sendln  'DFS=1'
beep
sendln  '9999'
pause 5
waitln 'RESET]'

;disconnect

end