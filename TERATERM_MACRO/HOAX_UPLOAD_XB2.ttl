; If MACRO is not linked to Tera Term,
testlink
save_result=result
; execute the connect command, use TERATERM.INI params
if save_result=0 connect ''

; FPGA-Image und alle PBCores auf DataFlash speichern
; enthält geheime Funktion - nicht weitergeben! - Automatische Freischaltung

yesnobox "Upload FPGA Configuration?" "BIT File"
enable_conf = result
if enable_conf=0 goto skip_conf

messagebox 'Install CONFDIS JP5 and I2CENA JP7/JP8 to proceed' 'HOAX 3'

mypath='C:\HOAX\FPGACORES\main_midi.bit'
sendln  'DFS=0!'
waitln '[OK]'
; Lösche gesamtes Flash
sendln  'DFE 2=0'
timeout=8
waitln '[$00000000]'
timeout=2
sendln  'DFX 0=0!'
waitln '[START XMODEM]'
xmodemsend mypath 1

:skip_conf
if enable_conf=1 goto skip_coreerase
; Alle 8 möglichen Cores laden
; DataFlash war gelöscht
sendln  'DFS=0!'
waitln '[OK]'
sendln  'DFE 1=0'
waitln '000]'
sendln  'DFE 1=1'
waitln '000]'
sendln  'DFE 1=2'
waitln '000]'
sendln  'DFE 1=3'
waitln '000]'
sendln  'DFE 1=4'
waitln '000]'
sendln  'DFE 1=5'
waitln '000]'
sendln  'DFE 1=6'
waitln '000]'
sendln  'DFE 1=7'
waitln '000]'
sendln  'DFE 1=10'
waitln '000]'

:skip_coreerase

; Core 0 = Chained OrganScan61
pause 1
mypath='C:\HOAX\FPGACORES\HX_chain.dat'
sendln  'DFX 1=0'
waitln '[START XMODEM]'
xmodemsend mypath 1
waitln '000]'

; Core 1 = MIDI receive
mypath='C:\HOAX\FPGACORES\HX_midi.dat'
sendln  'DFX 1=1'
waitln '[START XMODEM]'
xmodemsend mypath 1
waitln '000]'

; Core 2 = FatarScan2
mypath='C:\HOAX\FPGACORES\HX_fatar.dat'
sendln  'DFX 1=2'
waitln '[START XMODEM]'
xmodemsend mypath 1

; Core 3 = OrganScan16/Bass parallel 2x 44 Tasten
waitln '000]'
mypath='C:\HOAX\FPGACORES\HX_SR44.dat'
sendln  'DFX 1=3'
waitln '[START XMODEM]'
xmodemsend mypath 1
waitln '000]'

; Core 4 = OrganScan16/Bass parallel 2x 49 Tasten
mypath='C:\HOAX\FPGACORES\HX_SR49.dat'
sendln  'DFX 1=4'
waitln '[START XMODEM]'
xmodemsend mypath 1
waitln '000]'

; Core 5 = OrganScan16/Bass parallel 2x 61 Tasten
mypath='C:\HOAX\FPGACORES\HX_SR61.dat'
sendln  'DFX 1=5'
waitln '[START XMODEM]'
xmodemsend mypath 1
waitln '000]'

; Core 6 = Testroutine Hardware
mypath='C:\HOAX\FPGACORES\HX_test.dat'
sendln  'DFX 1=6'
waitln '[START XMODEM]'
xmodemsend mypath 1
waitln '000]'

; Core 7 = Opto, hier XB2 Parallel-Midi
mypath='C:\HOAX\FPGACORES\HX_xb2.dat'
sendln  'DFX 1=7'
waitln '[START XMODEM]'
xmodemsend mypath 1
waitln '000]'


beep
sendln  'wen=1'
mycmd='519=7'
sendln mycmd

; Core 10 = EEPROM-Inhalt für FV-1
mypath='C:\HOAX\FPGACORES\hoax3rev.bin'
sendln  'DFX 1=10'
waitln '[START XMODEM]'
xmodemsend mypath 1
waitln '000]'
; EEPROM aus CoreBlock laden und abwarten, I2C-JUMPER SETZEN!
sendln  'SFX=10'

timeout=10
messagebox 'Remove CONFDIS Jumper to proceed' 'HOAX 3'

sendln  'DFS=1'
beep
sendln  '9999'
pause 3

if save_result<>0 end
disconnect
closett

end