; If MACRO is not linked to Tera Term,
testlink
save_result=result
; execute the connect command, use TERATERM.INI params
if save_result=0 connect ''

; Alle 8 möglichen Cores laden
; DataFlash-Bereich löschen
timeout=2
sendln  'DFS=0!'
waitln '[OK]'
sendln  'DFE 1=0'
waitln '000]'
sendln  'DFE 1=1'
waitln '000]'
sendln  'DFE 1=2'
waitln '000]'
sendln  'DFE 1=3'
waitln '000]'
sendln  'DFE 1=4'
waitln '000]'
sendln  'DFE 1=5'
waitln '000]'
sendln  'DFE 1=6'
waitln '000]'
sendln  'DFE 1=7'
waitln '000]'
sendln  'DFE 1=10'
waitln '000]'

timeout=1
; Core 0 = Chained OrganScan61
mypath='C:\HOAX\FPGACORES\HX_chain.dat'
sendln  'DFX 1=0'
waitln '[START XMODEM]'
xmodemsend mypath 1

; Core 1 = MIDI receive
mypath='C:\HOAX\FPGACORES\HX_midi.dat'
sendln  'DFX 1=1'
waitln '[START XMODEM]'
xmodemsend mypath 1

; Core 2 = FatarScan2
mypath='C:\HOAX\FPGACORES\HX_fatar.dat'
sendln  'DFX 1=2'
waitln '[START XMODEM]'
xmodemsend mypath 1

; Core 3 = OrganScan16/Bass parallel 2x 44 Tasten
mypath='C:\HOAX\FPGACORES\HX_SR44.dat'
sendln  'DFX 1=3'
waitln '[START XMODEM]'
xmodemsend mypath 1

; Core 4 = OrganScan16/Bass parallel 2x 49 Tasten
mypath='C:\HOAX\FPGACORES\HX_SR49.dat'
sendln  'DFX 1=4'
waitln '[START XMODEM]'
xmodemsend mypath 1

; Core 5 = OrganScan16/Bass parallel 2x 61 Tasten
mypath='C:\HOAX\FPGACORES\HX_SR61.dat'
sendln  'DFX 1=5'
waitln '[START XMODEM]'
xmodemsend mypath 1

; Core 6 = Testroutine Hardware
mypath='C:\HOAX\FPGACORES\HX_test.dat'
sendln  'DFX 1=6'
waitln '[START XMODEM]'
xmodemsend mypath 1
waitln '000]'

; Core 7 = XB2; OptoScan von Gerrit: HX_opto.dat
mypath='C:\HOAX\FPGACORES\HX_xb2.dat'
sendln  'DFX 1=7'
waitln '[START XMODEM]'
xmodemsend mypath 1

; Core 10 = EEPROM-Inhalt für FV-1
mypath='C:\HOAX\FPGACORES\hoax3.bin'
sendln  'DFX 1=10'
waitln '[START XMODEM]'
xmodemsend mypath 1
waitln '000]'
; EEPROM aus CoreBlock laden und abwarten, I2C-JUMPER SETZEN!
sendln  'SFX=10'

beep
inputbox 'Scan Core Select: [0..7]' 'Set Default Scan'
sendln  'wen=1'
mycmd='519='
strconcat mycmd inputstr
sendln mycmd

sendln  'DFS=1'
beep
sendln  '9999'
pause 5


if save_result<>0 end
disconnect
closett

end